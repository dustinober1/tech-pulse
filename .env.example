# Environment Configuration
ENVIRONMENT=development

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tech_pulse
DB_USER=tech_pulse_user
DB_PASSWORD=secure_password_change_me

# Redis Configuration (for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External API Configuration
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security Configuration
SECRET_KEY=your_secret_key_change_me_in_production
ENCRYPTION_KEY=your_encryption_key_32_chars_long

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/tech_pulse.log

# Cache Configuration
CACHE_TTL=3600
CACHE_TYPE=redis

# Performance Configuration
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_BUCKET_NAME=tech-pulse-backups
BACKUP_RETENTION_DAYS=30

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_EMAILS=admin@yourcompany.com,dev@yourcompany.com

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Feature Flags
ENABLE_PHASE_9_ANALYTICS=true
ENABLE_REAL_TIME_FEATURES=true
ENABLE_PDF_GENERATION=true
ENABLE_ADVANCED_PREDICTIONS=true

# Development/Testing Flags
DEBUG=false
ENABLE_TEST_MODE=false
MOCK_EXTERNAL_APIS=false